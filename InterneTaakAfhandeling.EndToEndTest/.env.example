# ITA End-to-End Test Configuration Example
# Copy this file to .env and customize for your environment
# DO NOT put sensitive credentials here - use 'dotnet user-secrets' instead

# Application Settings
TEST_BASE_URL=https://ita.test.icatt.nl
TEST_ENVIRONMENT=test

# Test Behavior Settings  
TEST_TIMEOUT_MS=30000
TEST_RETRY_COUNT=3
SHOW_BROWSER=false

# Feature Flags
ENABLE_SCREENSHOTS=true
ENABLE_VIDEO_RECORDING=false
ENABLE_TRACE_VIEWER=true

# Browser Settings
BROWSER_TYPE=chromium
BROWSER_HEADLESS=true
BROWSER_SLOW_MO=0

# Reporting Settings
GENERATE_HTML_REPORT=true
REPORT_OUTPUT_DIR=./test-results

# Debug Settings
LOG_LEVEL=info
VERBOSE_LOGGING=false

# CI/CD Settings
CI_MODE=false
PARALLEL_TESTS=1

# ==================================================
# SENSITIVE CREDENTIALS - USE USER SECRETS INSTEAD:
# ==================================================
# dotnet user-secrets set "TestSettings:TEST_USERNAME" "your-email@domain.com"
# dotnet user-secrets set "TestSettings:TEST_PASSWORD" "your-password"
# dotnet user-secrets set "TestSettings:TEST_TOTP_SECRET" "your-totp-secret"
